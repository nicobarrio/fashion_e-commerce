<body>

    <%- include('../partials/header.ejs') %>

   <main>
    <section class="section_profile_user">
    <div class="buttons-container">

        <div class="edit_button btn-container">
            <a href="/user/edit">
                <button class="btn btn_edit">
                    Editar usuario
